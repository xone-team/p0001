	<select id="findProductListWithUser" parameterType="java.util.Map" resultType="java.util.Map">
        select p.*
        from t_product p left join t_user u on p.user_created = u.id 
        <where>
            <if test="productId != null">
				p.id = #{productId}
			</if>
        </where>
       	order by p.date_created
	</select>
</mapper>